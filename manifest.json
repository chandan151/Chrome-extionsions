{
    "manifest_version": 3,
    "name": "Learning Extensions",
    "description": "description of the Extension",
    "version": "1.0",
    "icons": {
        "128": "images/pexels-andre-melcher-1006363.jpg"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.ulethbridge.ca/*"
            ],
            "css": [
                "style.css"
            ],
            "js": [
                "script.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "images/*"
            ],
            "matches": [
                "https://www.ulethbridge.ca/*"
            ]
        },
        {
            "resources": [
                "fonts/*"
            ],
            "matches": [
                "https://www.ulethbridge.ca/*"
            ]
        }
    ]
}